<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_trainingschedule_exercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:padding="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp">

        <ImageView
                android:id="@+id/main_trainingschedule_workout_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pose28"
            android:background="@color/blue" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp">

            <TextView
                    android:id="@+id/main_trainingschedule_workout_name"
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:text="Example"
                android:textSize="24sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            
            <TextView
                android:id="@+id/main_trainingschedule_difficulty_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/difficulty_label"
                android:layout_below="@+id/main_trainingschedule_workout_name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="5dp"
                android:textSize="18dp" />
            
            <TextView
                    android:id="@+id/main_trainingschedule_difficulty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2"
                android:layout_alignTop="@+id/main_trainingschedule_difficulty_label"
                android:layout_toEndOf="@+id/main_trainingschedule_difficulty_label"
                android:layout_toRightOf="@+id/main_trainingschedule_difficulty_label"
                android:textSize="18dp" />

            

            <LinearLayout
                    android:id="@+id/main_trainingschedule_util_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/main_trainingschedule_difficulty_label"
                android:layout_marginLeft="69dp"
                android:layout_marginStart="69dp"
                android:layout_alignBottom="@+id/main_trainingschedule_difficulty"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:gravity="end|center_horizontal">
        
                    <ImageView
                            android:id="@+id/main_trainingschedule_tool_mat"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:src="@drawable/tool1"
                        android:adjustViewBounds="true" />
        
                    <ImageView
                            android:id="@+id/main_trainingschedule_tool_expander"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:src="@drawable/tool2"
                        android:adjustViewBounds="true" />
        
                    <ImageView
                            android:id="@+id/main_trainingschedule_tool_ball"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:src="@drawable/tool3"
                        android:adjustViewBounds="true" />
        
                    <ImageView
                            android:id="@+id/main_trainingschedule_tool_chair"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:src="@drawable/tool4"
                        android:adjustViewBounds="true" />
                </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>